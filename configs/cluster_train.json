{
  "data": {
    "root": "/dtu/blackhole/07/224071/dataset",
    "split": "train",
    "val_split": "val",
    "obs_seconds": 7.0,
    "fut_seconds": 4.0,
    "frequency_hz": 10.0,
    "max_agents": 128,
    "max_lanes": 256,
    "max_lane_points": 40,
    "agent_radius": 50.0,
