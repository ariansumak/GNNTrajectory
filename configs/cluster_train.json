    "log_dir": "runs",
    "lr_scheduler": {
      "type": "plateau",
      "factor": 0.5,
      "patience": 3,
      "threshold": 0.001,
      "cooldown": 0,
      "min_lr": 1e-5,
      "verbose": true
    }
